{
  "name": "nextjs-arweave",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "pnpm clean-build && node scripts/add-asset-prefix.mjs",
    "postbuild": "node scripts/remove-asset-prefix.mjs && prettier --write './next.config.js'",
    "build": "pnpm prebuild && next build && next export && pnpm postbuild",
    "upload": "pnpm build && pnpm bundlr",
    "upload-nc": "pnpm build && pnpm bundlr --no-confirmation",
    "bundlr": "bundlr upload-dir out -c arweave -h https://node2.bundlr.network -w ./wallet.json --index-file index.html",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write '**/*.{json,md,mjs,js,ts,jsx,tsx,yml,css}'",
    "clean": "pnpm clean-build && rm -rf node_modules",
    "clean-build": "rm -rf out*"
  },
  "dependencies": {
    "@ardrive/turbo-sdk": "1.1.0",
    "@hookform/resolvers": "3.3.2",
    "@irys/sdk": "0.0.4",
    "@next/font": "13.1.6",
    "@radix-ui/react-accordion": "1.1.2",
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-dialog": "1.0.5",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-label": "0.1.5",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-progress": "1.0.3",
    "@radix-ui/react-radio-group": "1.1.3",
    "@radix-ui/react-select": "2.0.0",
    "@radix-ui/react-slider": "1.1.2",
    "@radix-ui/react-tabs": "1.0.4",
    "@stitches/react": "1.2.8",
    "@tanstack/react-query": "4.28.0",
    "arconnect": "1.0.3",
    "arweave": "1.13.7",
    "arweave-account": "1.4.3",
    "arweave-graphql": "0.0.5",
    "arweave-wallet-connector": "1.0.2",
    "bignumber.js": "9.1.2",
    "crypto-browserify": "3.12.0",
    "filereader-stream": "2.0.0",
    "next": "13.1.6",
    "next-themes": "0.2.1",
    "process": "0.11.10",
    "react": "18.2.0",
    "react-beautiful-dnd": "13.1.1",
    "react-dom": "18.2.0",
    "react-dropzone": "14.2.3",
    "react-hook-form": "7.47.0",
    "react-icons": "4.7.1",
    "react-router-dom": "6.11.2",
    "sonner": "1.1.0",
    "stream-browserify": "3.0.0",
    "warp-contracts": "1.4.25",
    "warp-contracts-plugin-deploy": "1.0.12",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "eslint": "8.33.0",
    "eslint-config-next": "13.1.6",
    "prettier": "2.8.4",
    "typescript": "4.7.4"
  }
}
